<ScrollView
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:layout_width="match_parent"
    android1:layout_height="match_parent"
   >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ace_logo"
                android:background="#22984A"
                />

            <View
                android:layout_width="fill_parent"
                android:background="#22984A"
                android:layout_height="2dip"
                android:layout_marginBottom="3dip"/>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/enter_src"
                        android:textSize="17sp"
                        android:text="From "
                        android:textStyle="bold"/>
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />


                   <!-- <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:id="@+id/pick_src" />-->

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/enter_dest"
                        android:textSize="17sp"
                        android:text="To  "
                        android:textStyle="bold"/>

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView2"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />



                  <!--  <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:id="@+id/pick_dest" />-->

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/enter_adult"
                        android:textSize="17sp"
                        android:text="@string/enter_adult"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/enter_adult1"
                        android:textSize="17sp"
                        android:text="1"
                        android:maxLength="1"
                        android:inputType="number"/>



                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/enter_infant"
                        android:textSize="17sp"
                        android:text="@string/enter_infant"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/enter_infant1"
                        android:textSize="17sp"
                        android:text="0"
                        android:maxLength="1"
                        android:inputType="number"/>

                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enter_strt_dt"
                    android:textSize="17sp"
                    android:paddingLeft="5dip"
                    android:layout_gravity="center_vertical"
                    android:text="@string/enter_strt_dt"
                    android:textStyle="bold"/>

                <DatePicker
                    android:id="@+id/datepicker"
                    android:layout_height="200dp"
                    android:layout_width="230dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_map"
                    android:textSize="17sp"
                    android:paddingLeft="5dip"
                    android:layout_gravity="center_vertical"
                    android:text="@string/show_map"
                    android:textStyle="bold"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_map_ans"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_search"
                    android:textSize="17sp"
                    android:paddingLeft="5dip"
                    android:layout_gravity="center_vertical"
                    android:text="@string/save_search"
                    android:textStyle="bold"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_search_ans" />

            </LinearLayout>

            <View
                android:layout_marginBottom="5dip"
                android:layout_width="fill_parent"
                android:background="#0000FF"
                android:layout_height="2dip" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tablerowbutton1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <Button
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_select"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dip"
                    android:layout_span="1"
                    android:background="#22984A"
                    android:textColor="#FFFF00"
                    android:onClick="onButtonClicked"/>

                <View
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_gravity="center"
                    android:layout_width="2dip"
                    android:background="#22984A"
                    android:layout_height="45dip" />

                <Button
                    android:id="@+id/show_saved_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_saved_search"
                    android:textSize="17sp"
                    android:layout_span="1"
                    android:layout_marginRight="5dip"
                    android:background="#22984A"
                    android:textColor="#FFFF00"
                    android:onClick="onShowSavedSearchButtonClicked"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

</ScrollView>

